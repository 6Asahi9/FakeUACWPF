<Window x:Class="FakeUACWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fake UAC"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="false"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Wallpaper background -->
        <Image x:Name="WallpaperImage"
        Stretch="UniformToFill"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Panel.ZIndex="0" />
        <Rectangle Fill="#B0000000" Panel.ZIndex="1" />

        <!-- UAC Box -->
        <Border x:Name="UACBox"
                Width="459" Height="375"
                BorderThickness="0"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{DynamicResource UACHeaderColor}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource UACHeaderColor}" Offset="0.301"/>

                    <GradientStop Color="{DynamicResource UACMiddleColor}" Offset="0.301"/>
                    <GradientStop Color="{DynamicResource UACMiddleColor}" Offset="0.783"/>
                    
                    <GradientStop Color="{DynamicResource UACBottomColor}" Offset="0.783"/>
                    <GradientStop Color="{DynamicResource UACBottomColor}" Offset="1.0"/>

                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="113"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="81"/>
                </Grid.RowDefinitions>

                <!-- X Button -->
                <Button Width="20" Height="20"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Click="No_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,6,8,0"
                        Grid.Row="0"
                        Panel.ZIndex="5"
                        FocusVisualStyle="{x:Null}">

                    <Path Stroke="{DynamicResource NoButtonBorderColor}"
                        StrokeThickness="1"
                        StrokeStartLineCap="Round"
                        StrokeEndLineCap="Round"
                        Data="M 3 3 L 13 13 M 13 3 L 3 13"/>
                        <!-- M 3 3 L 15 15   → diagonal from top-left to bottom-right  -->
                        <!-- M 15 3 L 3 15   → diagonal from top-right to bottom-left -->
                </Button>


                <!-- Header -->
                <StackPanel Margin="16,12,16,0" Grid.Row="0">
                    <TextBlock Text="User Account Control"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               FontSize="12"
                               FontWeight="Normal"
                               Margin="9,4,0,0"/>

                    <TextBlock Foreground="{DynamicResource PrimaryTextColor}"
                            FontSize="19.5"
                            FontWeight="600"
                            Margin="6.5,18,0,6">
                        Do you want to allow this app to make
                        <LineBreak/>
                        changes to your device?
                    </TextBlock>

                </StackPanel>

                <!-- App Info -->
                <StackPanel Margin="16,6" Grid.Row="1">
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                        <Rectangle Width="41" Height="30" Fill="Gray" RadiusX="4" RadiusY="4" Margin="8,9.5,0,0"/>
                        <TextBlock Text="Unknown"
                                   FontSize="18"
                                   FontWeight="500"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="16,9.5,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Publisher: Unknown" 
                               Foreground="{DynamicResource PrimaryTextColor}"
                               FontSize="15"
                               Margin="9,20,0,0"/>

                    <TextBlock Text="Show more details"
                               Foreground="{DynamicResource AccentTextColor}"
                               FontSize="15"
                               Cursor="Hand"
                               Margin="9,20,0,0"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel x:Name="ButtonPanel"
                            Orientation="Horizontal"
                            Margin="6,12,6,12"
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            Panel.ZIndex="2">
                    
                    <!-- Yes -->
                    <Button Content="Yes"
                            Width="203" Height="29"
                            FontSize="14"
                            Background="{DynamicResource YesButtonColor}"
                            Foreground="{DynamicResource YesButtonTextColor}"
                            BorderThickness="0"
                            Click="Yes_Click"
                            Margin="0,0,5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource YesButtonHoverColor}"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource YesButtonHoverColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- 66B2FF B3D9FF-->
                    <Button x:Name="NoButton"
                            Content="No"
                            Width="203" Height="29"
                            FontSize="14"
                            Background="{DynamicResource NoButtonColor}"
                            Foreground="{DynamicResource NoButtonTextColor}"
                            BorderThickness="0"
                            Click="No_Click"
                            Margin="5,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btn"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btn" Property="Background" Value="{DynamicResource NoButtonHoverColor}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Floating white outline for "No" button -->
                <Border Width="213" Height="40"
                        BorderBrush="{DynamicResource NoButtonBorderColor}"
                        BorderThickness="2.5"
                        Background="Transparent"
                        CornerRadius="10"
                        Panel.ZIndex="10"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Margin="214,0,0,0"
                        IsHitTestVisible="False"/>
            </Grid>
        </Border>

        <!-- jumpscare video -->
        <MediaElement x:Name="JumpscareVideo"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Visibility="Hidden"
                      Stretch="Fill"
                      Panel.ZIndex="3"/>

        <TextBlock Text="ENG"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="0,0,47,51"
                   Panel.ZIndex="2"/>
    </Grid>
</Window>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="NoButtonColorHex">#007ACC</Color>
    <Color x:Key="NoButtonHoverColorHex">#56BFFF</Color>
    <Color x:Key="YesButtonColorHex">#F3F3F3</Color>
    <Color x:Key="YesButtonHoverColorHex">#E0E0E0</Color>
    <Color x:Key="UACHeaderColor">#E5E5E5</Color>
    <Color x:Key="UACMiddleColor">#F9F9F9</Color>
    <Color x:Key="UACBottomColor">#EDEDED</Color>

    <SolidColorBrush x:Key="NoButtonColor" Color="{StaticResource NoButtonColorHex}"/>
    <SolidColorBrush x:Key="NoButtonHoverColor" Color="{StaticResource NoButtonHoverColorHex}"/>
    <SolidColorBrush x:Key="YesButtonColor" Color="{StaticResource YesButtonColorHex}"/>
    <SolidColorBrush x:Key="YesButtonHoverColor" Color="{StaticResource YesButtonHoverColorHex}"/>
</ResourceDictionary>

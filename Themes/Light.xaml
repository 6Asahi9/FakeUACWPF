<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="UACHeaderColor">#E6E6E6</Color>
    <Color x:Key="UACMiddleColor">#FFFFFF</Color>
    <Color x:Key="UACBottomColor">#E6E6E6</Color>

    <Color x:Key="YesButtonColorHex">#F3F3F3</Color>
    <Color x:Key="YesButtonHoverColorHex">#E0E0E0</Color>
   
    <Color x:Key="NoButtonColorHex">#005fb2</Color>
    <Color x:Key="NoButtonHoverColorHex">#114D85</Color>

    <SolidColorBrush x:Key="AccentTextColor" Color="#005fb2" />

    <SolidColorBrush x:Key="PrimaryTextColor" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonTextColor" Color="#000000"/>

    <SolidColorBrush x:Key="YesButtonTextColor" Color="#000000"/>
    <SolidColorBrush x:Key="NoButtonTextColor" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="YesButtonColor" Color="{StaticResource YesButtonColorHex}" />
    <SolidColorBrush x:Key="YesButtonHoverColor" Color="{StaticResource YesButtonHoverColorHex}" />

    <SolidColorBrush x:Key="NoButtonColor" Color="{StaticResource NoButtonColorHex}" />
    <SolidColorBrush x:Key="NoButtonHoverColor" Color="{StaticResource NoButtonHoverColorHex}" />
    <SolidColorBrush x:Key="NoButtonBorderColor" Color="#000000"/>
</ResourceDictionary>
